<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="css/header.css">
  <link rel="stylesheet" href="css/main.css">
  <link rel="stylesheet" href="css/home.css">
  <title>Document</title>
</head>
<body>
  <%- include('includes/dashboard.ejs') %>
  <main class="main-container">
    <!-- FIRST ROW -->
    <section class="row">
      <!-- COLUMN -->
      <div class="col-one card">
        <div class="card-title-wrapper">
          <h2 class="card-title">{Year} Budget</h2>
        </div>
        <div class="col-wrapper-one">
          <p>Take Home Pay</p>
          <span class="lt-green"> $47,083</span>
          <hr class="hr">
          <p class="">Necessities Spent</p>
          <span class="lt-red">$31,345</span>
          <hr class="hr">
          <p class="">Indulgent Spent<br /></p>
          <span class="lt-red">$5639</span>
          <hr class="hr">
          <p class="">Remaining funds<br /></p>
          <span class="lt-green">$12,125</span>
          <hr class="hr">
          <button class="gen-btn add-btn">Add Expense</button> 
        </div>
      </div>
      <!-- COLUMN -->
      <div class="col-one card">
        <div class="card-title-wrapper">
          <h2 class="card-title">{Year} Chart</h2>
        </div>
        <i class="fas fa-chart-pie fa-10x flex-center"></i>
      </div>
      <!-- COLUMN -->
    <div class="col-one card">
      <div class="card-title-wrapper">
        <h2 class="card-title">{Year} Specifics</h2>
      </div>
      <div class="col-wrapper-two">
        <div>
          <p class="mb-1">Home</p>
          <span>$1200</span>
        </div>
        <div>
          <p class="mb-1">Utilities</p>
          <span>$347</span>
        </div>
        <div>
          <p class="mb-1">Vehicle</p>
          <span>$135</span>
        </div>
        <div>
          <p class="mb-1">Groceries</p>
          <span>$78</span>
        </div>
        <div>
          <p class="mb-1">Restruantes/Bars</p>
          <span>$275</span>
        </div>
        <div>
          <p class="mb-1">Misceleneous</p>
          <span>$113</span>
        </div>
      </div>
    </div>
    </section>

    <!-- SECOND ROW -->
    <section class="row">
      <div class="col-four card">
        <div class="card-title-wrapper">
          <h2 class="card-title">{Year} Specifics Graph</h2>
        </div>
      </div>

    </section>
  
<script src="https://kit.fontawesome.com/0e80a7ec36.js" crossorigin="anonymous"></script>
</body>
</html>